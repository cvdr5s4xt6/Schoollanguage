<UserControl x:Class="SchoolLanguageLearn.Components.PhotoUserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SchoolLanguageLearn.Components"
             mc:Ignorable="d" 
             d:DesignHeight="350" d:DesignWidth="350">
    <Grid>
        <Border>
            <StackPanel>
            <Image Source="{Binding PhotoByte}" x:Name="ImageImg" Height="250"></Image>
            <Button x:Name="MainBtbn" Click="MainBtbn_Click">Сделать главным</Button>
            <Button x:Name="DeletBtbn" Click="DeletBtbn_Click" >Удалить</Button>
        </StackPanel>
        </Border>
    </Grid>
</UserControl>
